{
  "name": "task-scheduler",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:validate": "node scripts/validate-tests.js",
    "test:health": "node scripts/health-check.js",
    "ci:monitor": "node scripts/ci-performance-monitor.js",
    "ci:monitor:mock": "node scripts/ci-performance-monitor.js --mock",
    "ci:report": "node scripts/generate-performance-report.js",
    "cache:monitor": "./scripts/monitor-cache-usage.sh",
    "cache:report": "./scripts/monitor-cache-usage.sh > cache-report.txt && cat cache-report.txt",
    "quality:security": "./scripts/security-check.sh",
    "quality:typescript": "./scripts/typescript-check.sh", 
    "quality:coverage": "./scripts/coverage-check.sh",
    "quality:all": "./scripts/security-check.sh && ./scripts/typescript-check.sh && ./scripts/coverage-check.sh",
    "postinstall": "prisma generate --no-engine",
    "prisma:generate": "prisma generate --no-engine"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@prisma/client": "^6.15.0",
    "@types/jest": "^30.0.0",
    "@types/nodemailer": "^7.0.1",
    "next": "15.5.2",
    "next-auth": "^4.24.11",
    "nodemailer": "^6.10.1",
    "prisma": "^6.15.0",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "jest": "^30.1.1",
    "jest-environment-jsdom": "^30.1.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
